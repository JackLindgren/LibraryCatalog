<h1>Languages</h1>
<table>
	<tr>
		<th>Language</th>
		<th>Count</th>
	</tr>
	{{#each languages}}
	<tr>
		<td>{{this.language}}</td>
		<td>{{this.blcount}}</td>
	</tr>
	{{/each}}
</table>

<h1>Countries</h1>
<table>
	<tr>
		<th>Country</th>
		<th>Count</th>
	</tr>
	{{#each countries}}
	<tr>
		<td>{{this.country}}</td>
		<td>{{this.bookCount}}</td>
	</tr>
	{{/each}}
</table>

