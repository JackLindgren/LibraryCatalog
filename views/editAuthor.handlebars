{{#if author_info}}
<h1>Edit Author</h1>
{{else}}
<h1>Add Author</h1>
{{/if}}

<form id="author_form" action="/editAuthor" method="post" onsubmit="return validateAuthorForm()">
	<fieldset id="form_field">
		<legend id="form_legend">Enter a new book</legend>

		First Name:		<input type="text" name="first_name" id="first_name" value="{{author_info.firstName}}"><br>
		Last Name:		<input type="text" name="last_name" id="last_name" value="{{author_info.lastName}}"><br>
		Date of Birth:	<input type="date" name="author_dob" id="author_dob" value="{{author_info.dob}}"><br>
		Country:		<select name="author_country" id="author_country"><br>
							{{#each countries}}
							<option value="{{this.country_id}}" id="country_{{this.country_id}}">{{this.country}}</option>
							{{/each}}
						</select>
		Gender:			<select name="gender" id="gender">
							<option value="m" id="gender_m">male</option>
							<option value="f" id="gender_f">female</option>
							<option value="o" id="gender_o">other</option>
						</select>
						<input type="hidden" name="author_id" id="author_id" value="{{author_info.id}}">
						<input type="hidden" name="country_id" id="country_id" value="{{author_info.country_id}}">
						<input type="hidden" name="author_gender" id="author_gender" value="{{author_info.gender}}">

		<input type="submit" id="new_author" value="Submit">
	</fieldset>
</form>

<h2>Instructions</h2>
<p>Set the author's attributes. First name + last name + DOB combination must be unique. DOB is not required.</p>

<script src="selectionSetAuthor.js"></script>
<script src="validateForm.js"></script>